<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>   <!-- http://ruby.railstutorial.org/chapters/user-microposts#code-updated_error_messages_partial-->
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>