
<!-- Ch 10 called partial from _feed.html partial http://ruby.railstutorial.org/chapters/user-microposts#code-feed_item_partial -->
<li id="<%= feed_item.id %>">  <!-- Listing 10.40 also adds a CSS id for each feed item using -->
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="content"><%= feed_item.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <!-- Ch 10 Delete link for micropost feed related to only the current_user  http://ruby.railstutorial.org/chapters/user-microposts#code-feed_item_partial_with_delete-->
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.content %>
  <% end %>
</li>